<h1>Sign Up!</h1>

<ul>
<% @user.errors.full_messages.each do |e| %>
    <li><%= e %></li>
    <% end %>
    </ul>

<%= form_for(@user) do |f| %>
<%=  f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit "Sign Up" %>

<% end %>