<%= render partial: 'layouts/errors', locals: {object: @meeting} %>


<%= form_for @meeting do |f| %>
<%= f.label :venue, "Venue: " %>
<%= f.select(:venue, ["Restaurant", "Coffee Shop", "Bar", "Other"], prompt: true) %>
<br>
<%= f.label :location, "Where:" %>
<%= f.text_field :location %>
<br>
<%= f.label :appointment, "When:" %>
<%= f.date_field :appointment %>
<br>
<%= f.label :rating, "Rate your Date from 1 - 5:" %>
<%= f.number_field :rating, min: 1, max: 5 %>
<br>
<%= f.label :suitor_id, "Choose a Suitor" %>
<%= f.collection_select :suitor_id, Suitor.alphabet, :id, :suitor_description, prompt: true %>
<br>
<br>
Or Create a New Suitor: 
<br>
<br>
<%= f.fields_for :suitor do |s| %>
    <%= s.label :name %>
    <%= s.text_field :name %>
    <br>
    <%= s.label :occupation %>
    <%= s.text_field :occupation %>
    <br>
    <%= s.label :age %>
    <%= s.number_field :age %>
    <br>
    <%= s.label :dating_app %>
    <%= s.select(:dating_app, ["Bumble", "Coffee Meets Bagel", "Hinge", "Match", "OKCupid", "Plenty of Fish", "Raya", "Tinder", "Other", "In Person (Lucky you!)"], prompt: true) %>
    <br>
    <%= s.label :hometown %>
    <%= s.text_field :hometown %>
    <br>
    <% end %>
<br>
<%= f.label :note %>
<%= f.text_area :note %>
<br>
<br>
<%= f.submit "Add Date" %>
<% end %>